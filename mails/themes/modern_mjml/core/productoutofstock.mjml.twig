{% extends '@MjmlMailThemes/modern_mjml/components/layout.mjml.twig' %}

{% block title %}{{ 'Product out of stock'|trans({}, 'EmailsBody', locale) }}{% endblock %}

{% block content %}
<mj-section padding="0 25px">
  <mj-column padding="0">
    <mj-raw>
      <!-- TITLE BEGINING -->
    </mj-raw>
    <mj-text padding-top="0" padding-bottom="20px" font-weight="600"  font-size="20px">
      {{ 'Hi {firstname} {lastname},'|trans({}, 'EmailsBody', locale) }}
    </mj-text>
    <mj-raw>
      <!-- TITLE ENDING -->
    </mj-raw>

    <mj-raw>
      <!-- BORDER BEGINING -->
    </mj-raw>
  </mj-column>
</mj-section>

<mj-section text-align="left" padding="0 50px 40px">
  <mj-column width="25px">
    <mj-divider width="25px" css-class="left" padding-top="0" padding-left="0" padding-right="0" border-width="3px" border-color="#505050"  border-style="solid"></mj-divider>

  </mj-column>
</mj-section>
<mj-raw>
  <!-- BORDER ENDING -->
</mj-raw>

<mj-raw>
  <!-- BOX BEGINING -->
</mj-raw>
<mj-section padding="15px 50px 40px">
  <mj-column background-color="#fefefe" border="1px solid #DFDFDF" padding-top="10px" padding-bottom="10px">
    <mj-text>
      {{ 'There are now less than <span class="label">{last_qty}</span> items in stock.'|trans({}, 'EmailsBody', locale)|raw }}
    </mj-text>
    <mj-text>
      <span style="font-weight:700;font-size:16px">{{ 'Remaining stock:'|trans({}, 'EmailsBody', locale)|raw }}</span> {qty}
    </mj-text>
    <mj-text>
      {{ 'Replenish your inventory, go to the <span class="label">"Catalog" > "Stocks"</span> section of your back office to manage your stock.'|trans({}, 'EmailsBody', locale)|raw }}
    </mj-text>
  </mj-column>
</mj-section>
<mj-raw>
  <!-- BOX ENDING -->
</mj-raw>
{% endblock %}
