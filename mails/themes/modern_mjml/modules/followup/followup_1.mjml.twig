{% extends '@MjmlMailThemes/modern_mjml/components/layout.mjml.twig' %}

{% block title %}{{ 'Follow up 1'|trans({}, 'EmailsBody', locale) }}{% endblock %}

{% block content %}
<mj-section padding="0 25px">
    <mj-column padding="0">

        <mj-raw>
            <!-- TITLE BEGINING -->
        </mj-raw>
        <mj-text padding-top="0" padding-bottom="20px" font-weight="600" font-size="20px">
            {{ 'Hi {firstname} {lastname},'|trans({}, 'EmailsBody', locale) }}
        </mj-text>
        <mj-raw>
            <!-- TITLE ENDING -->
        </mj-raw>

    </mj-column>
</mj-section>

<mj-raw>
    <!-- BORDER BEGINING -->
</mj-raw>
<mj-section text-align="left" padding="0 50px 40px">
    <mj-column width="25px">
        <mj-divider width="25px" css-class="left" padding-top="0" padding-left="0" padding-right="0" border-width="3px" border-color="#505050"  border-style="solid"></mj-divider>

    </mj-column>
</mj-section>
<mj-raw>
    <!-- BORDER ENDING -->
</mj-raw>

<mj-raw>
    <!-- SUBTITLE BEGINING -->
</mj-raw>
<mj-section padding="0 25px">
    <mj-column padding="0">
        <mj-text padding-bottom="0px" padding-top="0px" font-size="16px" font-weight="600">
            {{ 'Your cart at {shop_name}'|trans({}, 'EmailsBody', locale)|raw }}
        </mj-text>
    </mj-column>
</mj-section>
<mj-raw>
    <!-- SUBTITLE ENDING -->
</mj-raw>


<mj-raw>
    <!-- BOX BEGINING -->
</mj-raw>
<mj-section padding="15px 50px 40px">
    <mj-column background-color="#fefefe" border="1px solid #DFDFDF" padding="20px 0">
        <mj-text>
            {{ 'Thanks for your visit. However, it looks like you did not complete your purchase.'|trans({}, 'EmailsBody', locale) }}
        </mj-text>
        <mj-text padding-top="0px">
            {{ 'Your cart has been saved, you can go back to your order on our shop:'|trans({}, 'EmailsBody', locale)|raw }} <a href="{shop_url}" target="_blank">{shop_url}</a>
        </mj-text>
        <mj-text padding-top="0px">
            {{ 'We are pleased to offer you a discount of {amount}% off your next order. And this offer is valid for <span class="label">{days}</span> days, so do not waste a moment!'|trans({}, 'EmailsBody', locale)|raw }}
        </mj-text>
    </mj-column>
</mj-section>
<mj-raw>
    <!-- BOX ENDING -->
</mj-raw>

<mj-raw>
    <!-- SUBTITLE BEGINING -->
</mj-raw>
<mj-section padding="0 25px">
    <mj-column padding="0">
        <mj-text padding-bottom="0px" padding-top="0px" font-size="16px" font-weight="600">
            {{ 'Your voucher code on {shop_name}'|trans({}, 'EmailsBody', locale)|raw }}
        </mj-text>
    </mj-column>
</mj-section>
<mj-raw>
    <!-- SUBTITLE ENDING -->
</mj-raw>

<mj-raw>
    <!-- MESSAGE BOX BEGINING -->
</mj-raw>
<mj-section padding="15px 50px 40px">
    <mj-column background-color="#fefefe" padding-top="10px" padding-bottom="10px" border="1px solid #DFDFDF">
        <mj-text font-size="14px">
            <span style="font-weight:700">{{ 'Here is your VOUCHER Code :'|trans({}, 'EmailsBody', locale)|raw }}</span> {voucher_num}
        </mj-text>
        <mj-text padding-top="0px">
            {{ 'Enter this code in your shopping cart to get the discount.'|trans({}, 'EmailsBody', locale)|raw }}
        </mj-text>

    </mj-column>
</mj-section>
<mj-raw>
    <!-- MESSAGE BOX ENDING -->
</mj-raw>
{% endblock %}
